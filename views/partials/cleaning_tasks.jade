div
  h2 Tâches ménagères
  p 
    a(href='' ng-click='newTask()') 
      i.fa.fa-plus
      | Nouvelle tâche
  p(ng-if='tasks.soon.length + tasks.later.length == 0') Aucune tâche à faire
  div.col-xs-12(ng-if='tasks.soon.length > 0')
    h3 À faire rapidement
    table.table-striped.col-xs-12
      tr
        th Tâche
        th Description
        th À faire avant le
        th Fréquence par semaine
        th Points
        th
      tr(ng-repeat="task in tasks.soon | orderBy:'nextTime'")
        td {{ task.name }}
        td {{ task.description }}
        td {{ task.nextTime | amDateFormat:'ll' }}
        td {{ task.frequency | fraction }}
        td {{ task.points }}
        td
          a(href='' ng-click='markTaskAsDone(task)')
            i.fa.fa-check
          |  
          a(href='' ng-click='editTask(task)')
            i.fa.fa-edit
  div.col-xs-12(ng-if='tasks.later.length > 0')        
    h3 À faire plus tard
    table.table-striped.col-xs-12
      tr
        th Tâche
        th Description
        th À faire avant le
        th Fréquence par semaine
        th Points
        th
      tr(ng-repeat="task in tasks.later | orderBy:'nextTime'")
        td {{ task.name }}
        td {{ task.description }}
        td {{ task.nextTime | amDateFormat:'ll' }}
        td {{ task.frequency | fraction }}
        td {{ task.points }}
        td
          a(href='' ng-click='editTask(task)')
            i.fa.fa-edit
  div.col-xs-12(ng-if='tasks.nope.length > 0')        
    h3 Autre
    table.table-striped.col-xs-12
      tr
        th Tâche
        th Description
        th À faire avant le
        th Fréquence par semaine
        th Points
        th
      tr(ng-repeat="task in tasks.nope | orderBy:'nextTime'")
        td {{ task.name }}
        td {{ task.description }}
        td {{ task.nextTime | amDateFormat:'ll' }}
        td {{ task.frequency | fraction }}
        td {{ task.points }}
        td
          a(href='' ng-click='editTask(task)')
            i.fa.fa-edit
  .col-xs-12
    h3 Sommaire des points
    point-summary
  
